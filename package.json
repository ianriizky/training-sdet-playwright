{
  "name": "@ianriizky/training-sdet-playwright",
  "version": "1.0.0",
  "description": "A training project to learn SDET using Playwright.",
  "license": "MIT",
  "author": {
    "name": "Septianata Rizky Pratama",
    "email": "hi@ianrizky.web.id"
  },
  "type": "module",
  "private": true,
  "engineStrict": true,
  "engines": {
    "node": "~24.11.0"
  },
  "volta": {
    "node": "24.11.0",
    "npm": "11.6.2"
  },
  "packageManager": "npm@11.6.2",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ianriizky/training-sdet-playwright.git"
  },
  "bugs": {
    "url": "https://github.com/ianriizky/training-sdet-playwright/issues"
  },
  "homepage": "https://github.com/ianriizky/training-sdet-playwright/blob/main/README.md",
  "keywords": [
    "Node.js",
    "TypeScript",
    "Playwright"
  ],
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint \"{src,tests}/**/*.ts\" --fix",
    "playwright:install": "PLAYWRIGHT_BROWSERS_PATH=$HOME/pw-browsers playwright install",
    "playwright:install:deps": "PLAYWRIGHT_BROWSERS_PATH=$HOME/pw-browsers playwright install --with-deps",
    "show:report": "PLAYWRIGHT_BROWSERS_PATH=$HOME/pw-browsers playwright show-report",
    "test": "PLAYWRIGHT_BROWSERS_PATH=$HOME/pw-browsers playwright test",
    "test:headed": "PLAYWRIGHT_BROWSERS_PATH=$HOME/pw-browsers playwright test --headed",
    "test:ui": "PLAYWRIGHT_BROWSERS_PATH=$HOME/pw-browsers playwright test --ui",
    "test:cov": "export COVERAGE=true && PLAYWRIGHT_BROWSERS_PATH=$HOME/pw-browsers playwright test",
    "test:saucedemo": "PLAYWRIGHT_BROWSERS_PATH=$HOME/pw-browsers playwright test --grep @saucedemo",
    "test:orangehrm": "PLAYWRIGHT_BROWSERS_PATH=$HOME/pw-browsers playwright test --grep @orangehrm",
    "test:e2e": "PLAYWRIGHT_BROWSERS_PATH=$HOME/pw-browsers playwright test --grep @e2e"
  },
  "devDependencies": {
    "@bgotink/playwright-coverage": "^0.3.2",
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "zod": "^4.1.12"
  }
}
